# Spring infrastructure endpoints for local development
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/weather_alerts
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SPRING_ELASTICSEARCH_URIS=http://localhost:9200

# Required application security settings
APP_SECURITY_USER_USERNAME=dev-user
APP_SECURITY_USER_PASSWORD=dev-user-password
APP_SECURITY_ADMIN_USERNAME=dev-admin
APP_SECURITY_ADMIN_PASSWORD=dev-admin-password
APP_SECURITY_JWT_SECRET=change-this-to-a-32-char-minimum-local-dev-secret
APP_SECURITY_JWT_EXPIRATION_SECONDS=3600
APP_NOAA_MAX_IN_MEMORY_SIZE=10MB

# Observability
LOGGING_FILE_NAME=logs/weather-alert-backend.log
MANAGEMENT_TRACING_SAMPLING_PROBABILITY=1.0
MANAGEMENT_ZIPKIN_TRACING_ENDPOINT=http://localhost:9411/api/v2/spans
